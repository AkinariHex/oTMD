{
	"name": "osu-tourney-match-displayer",
	"version": "1.5.1",
	"description": "Displayer for osu! Tournament Matches",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/AkinariHex/oTMD.git"
	},
	"homepage": "https://github.com/AkinariHex/oTMD",
	"build": {
		"appId": "com.akinari.osu-tourney-match-displayer",
		"productName": "osu! Tourney Match Displayer",
		"copyright": "Copyright Â© 2021 Akinari",
		"win": {
			"target": [
				"nsis",
				"zip"
			],
			"artifactName": "otmd_v${version}_${arch}.${ext}",
			"requestedExecutionLevel": "requireAdministrator"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"deleteAppDataOnUninstall": true,
			"artifactName": "otmd_v${version}_${arch}_installer.${ext}"
		},
		"files": [
			"frontend/**/*",
			"node_modules/**/*",
			"index.js",
			"package.json"
		],
		"directories": {
			"buildResources": "resources"
		}
	},
	"scripts": {
		"build": "pkg index.js",
		"server:dev": "nodemon index.js",
		"server": "node index.js",
		"electron": "electron .",
		"builder": "electron-builder --x64 -p always",
		"pack": "electron-builder -w"
	},
	"keywords": ["osu", "displayer", "tournament", "match", "lobby", "score", "obs", "slobs", "osugame", "tourney", "tournament-match"],
	"author": "Akinari",
	"license": "GPL-3.0",
	"dependencies": {
		"cors": "^2.8.5",
		"electron-log": "^4.3.2",
		"electron-updater": "^4.3.8",
		"express": "^4.17.1",
		"node-fetch": "^2.6.1",
		"open": "^7.3.0",
		"pkg": "^4.4.9",
		"socket.io": "^3.0.4",
		"ws": "^7.4.0"
	},
	"devDependencies": {
		"electron": "^12.0.2",
		"electron-builder": "^22.10.5",
		"nodemon": "^2.0.6"
	}
}
